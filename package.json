{
  "name": "vince-portfolio",
  "version": "1.0.0",
  "type": "module",
  "homepage": "https://VinceBiggz.github.io/vince-portfolio",
  "scripts": {
    "dev": "vite --base=/vince-portfolio/",
    "build": "vite build",
    "prod": "vite build",
    "preview": "vite preview",
    "deploy": "npm run build && gh-pages -d dist",
    "deploy:ci": "gh-pages -d dist --dotfiles",
    "tw:init": "tailwindcss init -p",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "test:build": "npm run build && echo 'Build successful'",
    "ci:install": "npm ci",
    "ci:build": "npm run build",
    "ci:test": "npm run lint && npm run build"
  },
  "dependencies": {
    "@vitejs/plugin-react": "^4.0.4",
    "framer-motion": "^10.16.1",
    "lucide-react": "^0.525.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^7.7.1"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.17",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-tailwindcss": "^3.12.0",
    "gh-pages": "^6.0.0",
    "postcss": "^8.4.38",
    "prettier": "^3.2.5",
    "tailwindcss": "^3.4.3",
    "vite": "^5.2.10"
  }
}
